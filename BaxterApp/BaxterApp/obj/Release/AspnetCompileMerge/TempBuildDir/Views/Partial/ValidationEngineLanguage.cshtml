@{
    Layout = null;
}
 
@{
    string lang = ViewBag.Lang;
    switch(lang)
    {
        case "nl-nl":
            <script type="text/javascript" src="@Url.Content("~/Scripts/ValidationEngine/js/languages/jquery.validationEngine-nl.js")"></script>
            break;
            
        default:
            <script type="text/javascript" src="@Url.Content("~/Scripts/ValidationEngine/js/languages/jquery.validationEngine-en.js")"></script>            
            break;
    }
}     
