@using Baxter
@using Baxter.Constants
@using Baxter.Utilities

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="@Url.Content(AppSettings.Icon)" type="image/x-icon">

    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootstrap-dialog.less")">
    <link id="style" rel="stylesheet" type="text/css" href="@Html.Action("GetUserStyle")">

    <script src="~/Scripts/Languages/Global.@(UICulture).js"></script>
    @Scripts.Render("~/bundles/jquery", "~/bundles/bootstrap", "~/bundles/utilities")
    @Styles.Render("~/bundles/css")
</head>

<body class="body">
    @Html.Partial("_TopMenu")

    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-7 col-sm-3 col-md-3 col-lg-2 sidebar sidebar-left sidebar-animate sidebar-md-show">
                @{ Html.RenderAction("MainMenu", "Partial"); }
            </div>
            <div class="main col-md-9 col-lg-10 col-md-offset-3 col-lg-offset-2">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
